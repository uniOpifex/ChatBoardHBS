<div class="container">

	<div class="col s12 boardlist">
		<h3>Boards:</h3>
		<div>
			<a href="/boards/new">Add New Board</a>
		</div>
		<div>
			<ul class="collection stripedList">
				{{#each boards}}
				<li class="collection-item" href="/boards/{{this._id}}/">
					<span class="title">Board Title: {{this.name}}</span>
					<p>{{this.user}}
						<br> 
						{{niceDate this.date}}
					</p>
					<a href="/boards/{{this._id}}/" class="btn btn-floating pulse">
						<i class="fas fa-arrow-right"></i>
					</a>
				</li>
				{{/each}}
				<li class="colllection-item">
					<a href="/boards/new">Add New Board</a>
					<p>Need to create a user</p>
					<a href="/users/">Users</a>
				</li>
			</ul>
		</div>
		<br>

	</div>



</div>